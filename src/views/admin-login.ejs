<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Admin Login</title>
  </head>
  <body>
    <h1>Admin Login</h1>
    <% if (error) { %>
      <p style="color:red;"><%= error %></p>
    <% } %>
    <form method="post" action="/admin/login">
      <label>Password: <input name="password" type="password" required></label>
      <button type="submit">Sign in</button>
    </form>
    <p><a href="/">Home</a></p>
  </body>
</html>
