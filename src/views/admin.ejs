<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Admin - Invites</title>
  </head>
  <body>
    <h1>Admin - Create Invite</h1>
    <form method="post" action="/admin/invite">
      <label>Email: <input name="email" type="email" required></label>
      <button type="submit">Create Invite</button>
    </form>
    <h2>Existing Invites</h2>
    <ul>
      <% invites.forEach(i => { %>
        <li><%= i.email %> - <%= i.token %> - used: <%= i.used %></li>
      <% }) %>
    </ul>
    <p><a href="/">Home</a></p>
  </body>
</html>
